<?xml version="1.0" encoding="UTF-8"?>
<!--
    NPC LLM Chat - Text-to-Speech Configuration
    
    Cross-platform support:
    - Windows 11: Uses Windows SAPI (built-in, no server needed)
    - Ubuntu 24:  Uses Piper TTS server (requires server running)
    
    Provider "Auto" automatically selects based on your platform.
-->
<TTSConfig>
    <!-- TTS Server Configuration -->
    <Server>
        <!--
            TTS Provider:
            - Auto    : Windows SAPI on Windows, Piper on Linux (recommended)
            - Windows : Force Windows SAPI (Windows only)
            - Piper   : Force Piper server (requires server running)
        -->
        <Provider>Auto</Provider>

        <!-- Enable or disable TTS entirely -->
        <Enabled>true</Enabled>

        <!--
            Piper TTS server endpoint (used on Linux or when Provider=Piper)
            Start server: python piper_server.py --port 5050
        -->
        <Endpoint>http://localhost:5050/synthesize</Endpoint>

        <!-- Request timeout in seconds -->
        <TimeoutSeconds>10</TimeoutSeconds>
    </Server>

    <!-- Audio Playback Settings -->
    <Audio>
        <!-- Master volume (0.0 to 1.0) -->
        <Volume>0.8</Volume>

        <!-- 3D spatial audio: distance in meters -->
        <MaxDistance>20</MaxDistance>
        <MinDistance>2</MinDistance>

        <!-- Speech rate (1.0 = normal, 1.2 = faster, 0.8 = slower) -->
        <SpeechRate>1.0</SpeechRate>
    </Audio>

    <!--
        Voice Configuration
        
        On Windows: These map to voice gender (names containing "amy"/"lessac" = female, "ryan" = male)
        On Linux: Use Piper voice IDs (download from huggingface.co/rhasspy/piper-voices)
    -->
    <Voices>
        <DefaultVoice>en_US-lessac-medium</DefaultVoice>
        <TraderVoice>en_US-ryan-medium</TraderVoice>
        <CompanionVoice>en_US-amy-medium</CompanionVoice>
        <BanditVoice>en_US-ryan-medium</BanditVoice>
    </Voices>
</TTSConfig>
